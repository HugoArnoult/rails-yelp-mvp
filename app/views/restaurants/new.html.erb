<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1 class="mb-3 mt-3">New restaurant</h1>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORIES %>
        <%= f.input :phone_number %>
        <%= f.submit "Create new restaurant", class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Cancel', restaurants_path, class: "btn btn-danger mt-3" %>
    </div>
  </div>
</div>