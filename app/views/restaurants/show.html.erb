<div class="container">
  <h1 class="mt-5"><%= @restaurant.name %></h1>
  <p><%= @restaurant.category %></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %> ⭐️ - <%= review.content %></li>
    <% end %>
  </ul>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-2 mb-2" %>
  <%= link_to 'Back', restaurants_path, class: "btn btn-danger" %>
</div>