<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1 class="mb-3 mt-3">New review</h1>
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :rating, collection: Review::RATING %>
        <%= f.input :content %>
        <%= f.submit "Submit a review", class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Cancel', restaurant_path(@restaurant), class: "btn btn-danger mt-3" %>
    </div>
  </div>
</div>